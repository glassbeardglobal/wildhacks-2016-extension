{
  "manifest_version": 2,

  "name": "SwearJar",
  "description": "Disuades user from visiting blacklisted sites",
  "version": "1.0",

  "browser_action": {
    "default_icon": "icon.png",
    "default_title": "Click to ban this website.",
    "default_popup": "popup.html"
  },

  "permissions": [
    "activeTab",
    "https://*/*",
    "http://*/*",
    "tabs"
  ],

  "background": {
    "scripts": ["jquery-3.1.1.min.js", "background.js"],
    "persistent": true
  }

}
